<Page x:Class="MyWpfMvvmApp.Features.Home.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWpfMvvmApp.Features.Home.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="歡迎使用 WPF MVVM 應用程式" 
                       FontSize="24" FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <TextBox Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="{Binding Message}" 
                       FontSize="16" 
                       Foreground="Blue"/>

            <Button Content="更新時間" 
                    Command="{Binding UpdateTimeCommand}"
                    Width="120" Height="35" 
                    Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
