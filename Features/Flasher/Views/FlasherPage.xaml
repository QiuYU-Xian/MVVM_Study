<Page x:Class="MyWpfMvvmApp.Features.Flasher.Views.FlasherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWpfMvvmApp.Features.Flasher.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlasherPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- 連接控制區 -->
        <GroupBox Grid.Row="0" Header="連接設定" Margin="0,0,0,20">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- WebSocket 連接 -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="WebSocket URL:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding WebSocketUrl}" Margin="0,0,10,0"/>
                    <Button Grid.Column="2" Content="連接" Command="{Binding ConnectWebSocketCommand}"
                            
                            Margin="0,0,5,0"/>
                    <Button Grid.Column="3" Content="斷線" Command="{Binding DisconnectWebSocketCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                </Grid>

                <!-- 狀態顯示 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="連接狀態:" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ConnectionStatus}" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- 主要操作區 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：設備和韌體選擇 -->
            <GroupBox Grid.Column="0" Header="燒入設定" Margin="0,0,10,0">
                <StackPanel Margin="15">
                    <!-- 設備選擇 -->
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="選擇設備:" Margin="0,0,0,5"/>
                        <ComboBox Grid.Row="1" ItemsSource="{Binding AvailableDevices}"
                                  SelectedItem="{Binding SelectedDevice}"
                                  DisplayMemberPath="Name" Margin="0,0,0,5"/>
                        <Button Grid.Row="2" Content="刷新設備" Command="{Binding RefreshDeviceListCommand}"
                                HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- 韌體選擇 -->
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="韌體檔案:" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Text="{Binding SelectedFirmwarePath}" IsReadOnly="True" Margin="0,0,0,5"/>
                        <Button Grid.Row="2" Content="選擇韌體..." Command="{Binding SelectFirmwareCommand}"
                                HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- 燒入控制 -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="開始燒入" Command="{Binding StartFlashCommand}"
                                Background="LightGreen" Margin="0,0,10,0"/>
                        <Button Content="停止燒入" Command="{Binding StopFlashCommand}"
                                Background="LightCoral"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 右側：進度顯示 -->
            <GroupBox Grid.Column="1" Header="燒入進度" Margin="10,0,0,0">
                <StackPanel Margin="15">
                    <!-- 進度條 -->
                    <TextBlock Text="燒入進度:" Margin="0,0,0,5"/>
                    <ProgressBar Value="{Binding FlashProgress}" Maximum="100" Height="25" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding FlashProgress, StringFormat={}{0}%}" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                    <!-- 狀態顯示 -->
                    <TextBlock Text="狀態:" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding FlashStatus}" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- 當前日誌 -->
                    <TextBlock Text="最新訊息:" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentLog}" TextWrapping="Wrap" 
                               Background="LightGray" Padding="5" MinHeight="50"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- 日誌區域 -->
        <GroupBox Grid.Row="2" Header="操作日誌" Margin="0,20,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0" ItemsSource="{Binding LogMessages}" 
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <Button Grid.Row="1" Content="清除日誌" Command="{Binding ClearLogsCommand}"
                        HorizontalAlignment="Right" Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
