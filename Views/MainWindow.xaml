<Window x:Class="MyWpfMvvmApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfMvvmApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 主內容區域 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 導航選單 -->
            <StackPanel Grid.Column="0" Background="#f5f5f5" Margin="5">
                <Button Content="首頁" 
                        Command="{Binding ShowHomePageCommand}"
                        Margin="5" Height="40"/>
                <Button Content="設定" 
                        Command="{Binding ShowSettingsPageCommand}"
                        Margin="5" Height="40"/>
            </StackPanel>

            <!-- 頁面內容 -->
            <Frame Grid.Column="1" x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden"
                   Margin="10"/>
        </Grid>

        <!-- 狀態列 -->
        <StatusBar Grid.Row="1">
            <StatusBarItem Content="就緒" />
        </StatusBar>
    </Grid>
</Window>
